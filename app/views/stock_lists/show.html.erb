<p>
  <strong>Name:</strong>
  <%= @stock_list.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @stock_list.description %>
</p>

<%= form_with(model: [ @stock_list, @stock_list.stock_tickers.build ]) do |form| %>
  <table>
    <thead>
      <tr>
        <th>Symbol</th>
        <th>Name</th> 
        <th></th>     
      </tr>
    </thead>
  
    <tbody>
      <% @stock_list.stock_tickers.each do |stock_ticker| %>
        <tr>
          <td><%= stock_ticker.symbol %></td>
          <td><%= stock_ticker.name %></td>
          <td></td>
        </tr>
      <% end %>
      <tr>
        <td><%= form.text_field :symbol, maxlength: 4 %></td>
        <td><%= form.text_field :name %></td>
        <td><%= form.submit "Add" %></td>
      </tr>
    </tbody>
  </table>
<% end %>

<%= link_to 'Edit', edit_stock_list_path(@stock_list) %> |
<%= link_to 'Back', stock_lists_path %>