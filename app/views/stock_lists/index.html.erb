<h1>Stock Lists</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stock_lists.each do |stock_list| %>
      <tr>
        <td><%= stock_list.name %></td>
        <td><%= stock_list.description %></td>
        <td><%= stock_list.user.email %></td>        
        <td><%= link_to 'Show', stock_list %></td>
        <% if (stock_list.user == current_user) %>
          <td><%= link_to 'Edit', edit_stock_list_path(stock_list) %></td>
          <td><%= link_to 'Delete', stock_list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% else %>
          <td/><td/>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Stock List', new_stock_list_path %>
